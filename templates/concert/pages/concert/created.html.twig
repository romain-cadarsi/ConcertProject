{% extends 'concert/base.html.twig' %}
    {% block header %} {% include('concert/components/header.html.twig') with {'mastPhrase' : "Concert bien créé !" , 'subMastPhrase' : "C'est l'heure de Rocker !"} %}
    {% endblock %}

{% block content %}

    <section style="min-height: 100vh">
        <div class="container">
            <div class="row align-items-center">
                <table style="margin : 0 auto">
                    <thead>
                    <tr>
                        <th>Groupe</th>
                        <th>Tournée</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{% for band in concert.band %}
                                    {{ band.name }}
                                {% endfor %}
                            </td>
                            <td>{{ concert.tournee }}</td>
                            <td>{{ concert.date | date('d M Y') }}</td>
                            <td><button class="btn-danger"> Supprimer</button> </td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('concert_create') }}">Créer un concert</a>
            </div>
        </div>
    </section>

{% endblock %}
